<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:text="Choose the color for your event"
        android:textSize="29dp" />

    <Button
        android:id="@+id/purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purple"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="@color/purplepastel"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pink"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="@color/pinkpastel"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="@color/greenpastel"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="@color/yellowpastel"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="@color/bluepastel"
        android:textColor="@color/black"/>
</FrameLayout>